{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "target": "ESNEXT",
    "lib": ["ESNEXT", "DOM"],
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
